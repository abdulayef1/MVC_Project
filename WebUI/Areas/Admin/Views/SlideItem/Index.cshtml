
@model IEnumerable<SlideItem>
@{
	ViewData["Title"] = "Index";
}
<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Slide Items</h4>
			<a asp-action="Create" style="font-weight:900; padding:22px;font-size:15px" class="btn btn-secondary">
				Create Item
			</a>
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>
								Image
							</th>
							<th>
								Tittle
							</th>
							<th>
								Actions
							</th>
						</tr>
					</thead>
					<tbody>

						@foreach (SlideItem item in Model)
						{
							<tr>
								<td class="py-1">
									<div class="expand-width" data-depth="0.2">
										<img style="width:200px;height:auto;" src="~/assets/images/website-images//@item.Phote"
										 alt="Inner Image" />
									</div>
								</td>
								<td>
									@item.Title
								</td>
								<td>

									<a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">
										<i class="mdi mdi-lead-pencil"></i>
									</a>
									<a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning">
										<i class="mdi mdi-information-outline"></i>
									</a>
									<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
										<i class="mdi mdi-delete"></i>
									</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>



